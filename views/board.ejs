                        if (!languageMap[languageOption]) {
                            const colDiv = document.createElement('div');
                            colDiv.className = 'col-12 col-md-6 col-lg-3';

                            const h5Tag = document.createElement('h5');
                            h5Tag.textContent = `${languageOption} ${flag}`;
